<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="5dp"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
    >
        <TextView
                android:id="@+id/item_mosque_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="DENEME CAMİ 1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/item_normal_font_size"

        />

        <TextView
                android:id="@+id/item_mosque_location"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="İstanbul Fatih"
                android:textSize="@dimen/item_small_font_size"
        />

    </LinearLayout>

</androidx.cardview.widget.CardView>